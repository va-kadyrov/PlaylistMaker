<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBtnStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/main_btn_back</item>
        <item name="android:textColor">@color/main_btn_text</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/main_btn_text</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingsBtnStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/small_btn_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/middle_text</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ReloadBtnStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/small_btn_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/search_pl_text</item>
        <item name="android:textSize">@dimen/little_text</item>
        <item name="android:textColor">@color/settings_back</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="PlayerGrayLittleText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/little_text2</item>
        <item name="android:textColor">@color/player_gray_text</item>
    </style>
    <style name="PlayerBlackLittleText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/little_text2</item>
        <item name="android:textColor">@color/search_pl_text</item>
    </style>
    <style name="TextAllCapsFalse" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>