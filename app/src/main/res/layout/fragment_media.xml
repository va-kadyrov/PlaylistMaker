<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_almostblack"
    tools:context=".media.ui.MediaFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/media_tb_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_btn_size"
        android:layout_marginBottom="16dp"
        app:title="@string/media_header"
        app:titleTextColor="@color/almostblack_white"
        android:background="@color/white_almostblack"
        android:textSize="@dimen/large_text"
        android:fontFamily="@font/ys_display_medium"
        android:paddingHorizontal="@dimen/padding_horizontal"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        style="@style/TextAllCapsFalse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/white_almostblack"
        app:tabIndicatorColor="@color/almostblack_white"
        app:tabTextColor="@color/almostblack_white"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>