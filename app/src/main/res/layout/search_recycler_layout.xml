<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:clickable="true">

        <ImageView
            android:id="@+id/search_rec_img"
            android:layout_width="@dimen/small_img"
            android:layout_height="@dimen/small_img"
            android:src="@drawable/track_empty_img"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp">
                <TextView
                    android:id="@+id/search_rec_track_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ys_display_regular"
                    android:textSize="@dimen/middle_text"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="search_rec_track_name_____________________too_long"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/search_rec_track_author"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ys_display_regular"
                            android:textSize="@dimen/small_text"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingEnd="4dp"
                            tools:text="search_rec_track_author----------------------------------------------------------------------------------------------------"/>
                        <TextView
                            android:id="@+id/search_rec_track_time"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ys_display_regular"
                            android:textSize="@dimen/small_text"
                            android:maxLines="1"
                            android:drawableStart="@drawable/small_ellipse"
                            android:drawablePadding="4dp"
                            android:ellipsize="end"
                            tools:text="23:55"/>
                </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_agreement"/>
</LinearLayout>