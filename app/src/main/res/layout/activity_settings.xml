<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_back">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_btn_size"
        android:layout_marginBottom="16dp"
        app:titleMarginStart="40dp"
        app:logo="@drawable/btn_back"
        app:title="@string/settings_header"
        app:titleTextColor="@color/settings_text"
        android:paddingHorizontal="@dimen/padding_horizontal"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_btn_height"
        android:text="@string/btn_night_theme"
        android:textSize="@dimen/middle_text"
        android:paddingHorizontal="@dimen/padding_horizontal"
        app:thumbTint="@color/thumb"
        app:trackTint="@color/tint"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_btn_height"
        android:layout_gravity="center"
        android:textSize="@dimen/middle_text"
        android:textColor="@color/settings_text"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:gravity="center_vertical"
        android:text="@string/btn_share_app"
        app:drawableEndCompat="@drawable/btn_share"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_btn_height"
        android:layout_gravity="center"
        android:textSize="@dimen/middle_text"
        android:textColor="@color/settings_text"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:gravity="center_vertical"
        android:text="@string/btn_write_support"
        app:drawableEndCompat="@drawable/btn_support"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_btn_height"
        android:layout_gravity="center"
        android:textSize="@dimen/middle_text"
        android:textColor="@color/settings_text"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:gravity="center_vertical"
        android:text="@string/btn_user_agreement"
        app:drawableEndCompat="@drawable/btn_agreement"/>
</LinearLayout>