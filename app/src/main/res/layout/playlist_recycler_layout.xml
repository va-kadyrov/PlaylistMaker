<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="4dp"
    >

        <ImageView
            android:id="@+id/playlist_item_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/playlist_item_name"
            app:layout_constraintDimensionRatio="H,1:1"
            android:scaleType="fitCenter"
            android:src="@drawable/album_cover_empty"/>

    <TextView
        android:id="@+id/playlist_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_item_img"
        app:layout_constraintBottom_toTopOf="@id/playlist_item_tracks"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textStyle="normal"
        android:textColor="@color/almostblack_white"
        android:maxLines="1"
        tools:text="name" />

    <TextView
        android:id="@+id/playlist_item_tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_item_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textStyle="normal"
        android:textColor="@color/almostblack_white"
        android:maxLines="1"
        tools:text="Description " />
    </androidx.constraintlayout.widget.ConstraintLayout>

